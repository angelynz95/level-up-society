<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LevelUpSociety" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_moderate_green</item>
        <item name="colorPrimaryDark">@color/dark_moderate_green</item>
        <item name="colorAccent">@color/dark_moderate_green</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="growcherish">
        <item name="android:textSize">38sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="view_badges">
        <item name="android:textSize">
            18sp
        </item>
        <item name="android:textColor">
            @color/very_dark_green
        </item>
    </style>

    <style name="scan">
        <item name="android:textSize">
            18sp
        </item>
        <item name="android:textColor">
            @color/white
        </item>
    </style>
    <style name="badges">
        <item name="android:textSize">
            32sp
        </item>
        <item name="android:textColor">
            @color/white
        </item>
    </style>
    <style name="grocery_name">
        <item name="android:textSize">
            24sp
        </item>
        <item name="android:textColor">
            @color/very_dark_green
        </item>
    </style>
    <style name="grocery_desc">
        <item name="android:textSize">
            14sp
        </item>
        <item name="android:textColor">
            @color/very_dark_green
        </item>
    </style>
    <style name="grocery_weight">
        <item name="android:textSize">
            14sp
        </item>
        <item name="android:textColor">
            @color/very_dark_green
        </item>
    </style>
    <style name="grocery_price">
        <item name="android:textSize">
            24sp
        </item>
        <item name="android:textColor">
            @color/very_dark_green
        </item>
    </style>
    <style name="grocery_discount">
        <item name="android:textSize">
            24sp
        </item>
        <item name="android:textColor">
            @color/strong_red
        </item>
    </style>
    <style name="grocery_promo">
        <item name="android:textSize">
            14sp
        </item>
        <item name="android:textColor">
            @color/pure_orange
        </item>
    </style>
    <style name="grocery_quantity">
        <item name="android:textSize">
            24sp
        </item>
        <item name="android:textColor">
            @color/pure_orange
        </item>
    </style>
    <style name="plus_minus">
        <item name="android:textSize">
            30sp
        </item>
        <item name="android:textColor">
            @color/white
        </item>
    </style>

    <style name="Theme.LevelUpSociety.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LevelUpSociety.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LevelUpSociety.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>